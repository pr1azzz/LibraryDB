<Window x:Class="LibraryManagementSystem.Views.EditGenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование жанра" Height="250" Width="400"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="5" Height="25"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Описание:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="DescriptionBox" Grid.Row="1" Grid.Column="1" Margin="5" Height="25"/>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="80" Margin="5" Height="30"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80" Margin="5" Height="30"/>
        </StackPanel>
    </Grid>
</Window>