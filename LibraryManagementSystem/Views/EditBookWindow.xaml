<Window x:Class="LibraryManagementSystem.Views.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование книги" Height="450" Width="450"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="TitleBox" Grid.Row="0" Grid.Column="1" Margin="5" Height="30"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Автор:" Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>
        <ComboBox x:Name="AuthorCombo" Grid.Row="1" Grid.Column="1" Margin="5" Height="30" 
                  DisplayMemberPath="LastName" SelectedValuePath="Id"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Жанр:" Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>
        <ComboBox x:Name="GenreCombo" Grid.Row="2" Grid.Column="1" Margin="5" Height="30" 
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Год издания:" Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="YearBox" Grid.Row="3" Grid.Column="1" Margin="5" Height="30"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="ISBN:" Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="IsbnBox" Grid.Row="4" Grid.Column="1" Margin="5" Height="30"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Количество:" Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="QuantityBox" Grid.Row="5" Grid.Column="1" Margin="5" Height="30"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Height="35" Margin="5" 
                    Background="LightGreen" FontWeight="Bold"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100" Height="35" Margin="5" 
                    Background="LightPink"/>
        </StackPanel>
    </Grid>
</Window>